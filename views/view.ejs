<body>

    <style>
        #map {
            height: 100%;
        }

        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .map-container {
            width: 70%;
            float: left;
            height: 100vh;
        }

        .chart-container {
            position: relative;
            width: 30%;
            float: left;
            height: 100vh;
        }
    </style>

    <div class="map-container" id="map"></div>

    <div class="chart-container">
        <canvas id="myChart"></canvas>
    </div>

    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'line',
            responsive: true,
            data: {
                labels: [],
                datasets: [{
                    label: 'Geschwindigkeit',
                    data: [],
                    borderWidth: 1,
                    borderColor: [
                        'rgba(153, 102, 255, 1)'
                    ],
                    pointStyle: 'line'
                }],
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        suggestedMax: 50
                    }
                },
                elements: {
                    point: {
                        radius: 0
                    }
                }
            }
        });

        for (let i = 1; i < data_array.length - 2; i++) {
            myChart.data.labels[i] = data_array[i][7];
            myChart.data.datasets[0].data[i] = data_array[i][11];
        }

        /* for (let i = 1; i < 10; i++) {
